shPt = macro(400, "Sio Party - 70%",function()
  if g_game.isOnline() then
    local p = g_game.getLocalPlayer()
    if p:getHealth()/p:getMaxHealth() > 0.5 then
        for i,v in pairs(g_map.getSpectators(p:getPosition())) do 
            if v:getId() ~= p:getId() and v:getHealthPercent() <= 70 and ((v:getShield() >= 3 and v:getShield() ~= 11) or v:getEmblem() == 1) then 
                say('exura sio "' .. v:getName())
            end      
        end    
    end 
  end 
end)
